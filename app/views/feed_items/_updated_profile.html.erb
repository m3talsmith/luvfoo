<%-
feed_item ||= @feed_item
user = feed_item.item
-%>
<div class="feed_item friend_feed" id="<%= feed_item.dom_id %>">
<div class="left">
  <img src="/images/blurp_friends.png" class="png icon_small" title="<%= _('Friends Icon') %>" alt="<%= _('Friends Icon') %>" /> 
  <%= _("%{user} updated their profile") %{ :user => link_to(h(user.full_name), profile_path(user))} -%>. 
</div>
<div class="right">
  <%= x_feed_link(feed_item) %>
</div>
<div class="clear"></div>
</div>
