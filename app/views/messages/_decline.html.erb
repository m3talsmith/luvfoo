<div class="thickbox_form">
	<% remote_form_for :message, :url => messages_path do |f| %>
		
		<div class="row">
			<label for=""><%= _('To:') %></label>
			<input type="hidden" id="message_sender_id" name="message[sender_id]" value="<%= current_user.id %>" />
			<input type="hidden" id="message_receiver_id" name="message[receiver_id]" value="" />
			<input type="hidden" id="membership_request_id" name="membership_request_id" value="" />
            <%= text_field_tag :name, '', :style => 'width:340px;', :disabled => true %>	
		</div>
	
		<div class="row">
			<label for=""><%= _('Subject:') %></label>
			<%= f.text_field :subject, :style => 'width:340px;' %>
		</div>
		
		<div class="row">
			<label for=""><%= _('Body:') %></label>
			<%= f.text_area :body, :style => 'width:340px;margin-bottom:10px;', :value => _('You must receive an invitation to join this group.') %>
		</div>
		
		<div class="row button">
		  <%= submit_tag _('Decline Request to Join Group'), :class=>'button', :style => 'float:right;margin-right:70px;' %>
		</div>

	<%end %>
</div>