<div id="forum-container">
  <div class="crumbs" xstyle="margin-top:1.1em;">
    <%= link_to _('Forums'), forums_path %> <span class="arrow">&rarr;</span>
    <%= link_to h(@forum.name), forum_path(@forum) %> <span class="arrow">&rarr;</span>
  </div>
  <h1 id="new_topic"><%= _('New Topic') %></h1>
  <p class="subtitle"><%= _('by %{by_user}') % {:by_user => current_user.display_name} %></p>
  <%= render :partial => 'topics/new'%>
</div>