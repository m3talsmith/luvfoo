<%= _("Dear %{user_name},") % {:user_name => h(@user.login)} %>

<%= _("%{application_name} has received a request to reset your password.") % {:application_name => GlobalConfig.application_name} %>  
<%= _('If this was not your intentions, please ignore this message.') %>

<%= _('For future reference, you are registered as:') %>
<%= _("Username: %{user_name}") % {:user_name => h(@user.login)} %>

<%= _('To reset your password please visit this link:') %>
<%= @url %>

<%= _("Please email %{support_email} if you have any questions or comments about the website.") % {:support_email => GlobalConfig.support_email} %>

<%= _('Best Regards,') %>

<%= _(GlobalConfig.emailed_by) %>


